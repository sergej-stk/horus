{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Horus",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "src/bin/Debug/net8.0/Horus.dll",
            "args": [],
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "integratedTerminal"
        }
    ]
}
